<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>0.0.1-RC02</Version>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <IsPackable>true</IsPackable>
	<!--<PackageLicenseFile>..\..\LICENSE</PackageLicenseFile>-->
	<PackageId>Overmock</PackageId>
	<PackageProjectUrl>https://github.com/Overmock</PackageProjectUrl>
	<Title>Overmock</Title>
	<Description>Overmock is a mocking framework that allows for very robust mocking configuration and validation.</Description>
	<PackageReadmeFile>\README.md</PackageReadmeFile>
	<RepositoryUrl>https://github.com/Overmock</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
	<PackageTags>mocking;mock;unit tests;unit testing;unittesting;unittest;mocking framework;overmock;overmocked;</PackageTags>
	<AnalysisLevel>6.0-recommended</AnalysisLevel>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	<IncludeSymbols>True</IncludeSymbols>
	<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<PackageReleaseNotes>This is a first release and is meant for internal usages until further notice.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Runtime\**" />
    <Compile Remove="Setup\**" />
    <EmbeddedResource Remove="Runtime\**" />
    <EmbeddedResource Remove="Setup\**" />
    <None Remove="Runtime\**" />
    <None Remove="Setup\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="IFluentInterface" Version="2.1.0" />
    <PackageReference Include="Lokad.ILPack" Version="0.2.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.4.0" />
  </ItemGroup>
	
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Compilation</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
	
  <ItemGroup>
    <ProjectReference Include="..\Overmock.Proxies\Overmock.Proxies.csproj" />
  </ItemGroup>
</Project>
